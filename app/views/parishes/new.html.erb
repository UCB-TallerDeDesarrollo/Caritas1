<h1>Crear Parroquia</h1>

<% form_for(@parish) do |p| %>
  <%= p.error_messages %>
    <table>
      <tr>
        <td>*Nombre Parroquia</td>
        <td><%= p.text_field :parish_name %></td>
      </tr>
      <tr>
        <td>*Ubicacion</td>
        <td><%= p.text_field :ubication %></td>
      </tr>
      <tr>
        <td>*Transporte</td>
        <td><%= p.text_field :transport %></td>
      </tr>
      <tr>
        <td>*Telefono</td>
        <td><%= p.text_field :telephone %></td>
      </tr>
      <tr>
        <td>*Sensibilizada</td>
        <td><%= p.check_box :sensitize %></td>
      </tr>
      <tr>
        <td>*Nombre del Parroco</td>
        <td><select name="parish[pastor_id]">
    <% if @pastor  
    @pastor.each do |pastor| %>
    <option value="<%=pastor.id%>">
               <%=pastor.name+" "+pastor.primary_last_name+" "+pastor.second_last_name%>
    </option>
      <%end%>
    <%end%>
</select></td>
      </tr>
      <tr>
        <td>*  Estos campos son obligatorios</td>
      </tr>
      <tr align="right">
        <td colspan="2">
          <%= p.submit 'Registrar' %>
          <button type="reset">Limpiar</button>
          <%= link_to 'Cancelar', parishes_path %>
        </td>
      </tr>
    </table>
<% end %>


