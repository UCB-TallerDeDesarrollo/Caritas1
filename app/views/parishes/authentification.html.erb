<%= javascript_include_tag "jquery-1.7.2"  %>
<style type="text/css">
  .button_state
  {
      background: #810 30% url(/images/alert-overlay.png) repeat-x;
      display: inline-block;
      padding: 5px 10px 6px;
      color: white;
      height: 25px;
      text-decoration: none;
      font-weight: bold;
      line-height: 1;
      -webkit-box-shadow: 0 1px 3px #999;
      text-shadow: 0 -1px 1px #222;
      border-bottom: 1px solid #222;
      position: relative;
      cursor: pointer;
      font-size: 11px;
      margin-right: 5px;
  }
</style>
<h2>Autentificarse para eliminar la parroquia</h2>
<% form_tag :controller => "parishes", :action => "delete_after_authentification" do %>
	<td><%=h @parish.parish_name %></td>
	<%= hidden_field_tag(:parent_id, @parish.id) %>
    <table>
    	
    <tr>
      <td>* Nombre de Usuario</td>
      <td><%= text_field_tag(:username) %></td>
    </tr>
    <tr>
      <td>* Contrase√±a</td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr align="right">
      <td colspan="2"><%= submit_tag "Eliminar" %> <input type="button"  class="button_state nyroModalClose" value="Cancelar" /></td>
    </tr>
  </table>
<% end %>