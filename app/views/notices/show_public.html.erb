<div id="content-wrap">
  <%= render :partial => "main_page/acordeon" %>
  <div id="main" >
     <H2><%= @notice.title%></h2>
      <br>
          <% if @notice.notice_photo %>
          <%=  image_tag @notice.notice_photo.url,:size=>"300x200" %>
        <td>
          <% else %>
          <%=  image_tag "NoticeDefault.png", :size=>"500x350" %>
          <% end   %>
      <br>
          
      <p class="mostrarContent">
            <%= @notice.description %>
      </p>
     
     <p class="word_wrap">
     	<%if current_user%>
     		<%=link_to "Volver", :controller => "notices", :action => "index",:id =>'find'%>
     	<%else%>
     		<%=link_to "Volver", :controller => "notices", :action => "index_public",:id =>'find'%>
     	<%end%>
     </p>
  </div>
 </div>


