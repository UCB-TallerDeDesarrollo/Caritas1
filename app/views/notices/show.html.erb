<% form_for(@notice) do |f| %>
<%= f.error_messages %>
  <table>
    <tr>  
      <td>* <%= :title %></td>
      <td><%= f.text_field :title, :disabled => true %></td>
    </tr>
    
    <tr>
      <td><%= :description  %> </td>
      <td><%= f.text_area :description, :size => "100x10", :disabled => true %></td>
    </tr>

    <tr>
      <td>* <%= :notice_type %> </td>
      <td><%= f.select  :notice_type, Notice::NOTICES_TYPES , :disabled => true %></td>
    </tr>

    <tr>
      <td><%= :is_published %></td>
      <td><%= f.check_box :is_published, :disabled => true %></td>
    </tr>

    <tr>
      <td><%= :last_date %> </td>
      <td><%= f.date_select :last_date, :disabled => true %></td>
    </tr>
    
    <tr align="right">
      <td colspan="2">
        <%= link_to 'Editar', edit_notice_path(@notice) %> |
        <%= link_to 'Atras', notices_path %>
      </td>
    </tr>
  </table>
<% end %>


