<h1>Crear Noticia</h1>

<% form_for(@notice) do |f| %>
<%= f.error_messages %>
  <table>
    <tr>  
      <td>* <%= f.label :title %></td>
      <td><%= f.text_field :title %></td>
    </tr>
    
    <tr>
      <td><%= f.label :description  %> </td>
      <td><%= f.text_area :description, :cols => 60, :rows => 10 %></td>
    </tr>

    <tr>
      <td>* <%= f.label :notice_type %> </td>
      <td><%= f.text_field :notice_type %></td>
    </tr>

    <tr>
      <td><%= f.label :is_published %></td>
      <td><%= f.check_box :is_published %></td>
    </tr>

    <tr>
      <td><%= f.label :last_date %> </td>
      <td><%= f.date_select :last_date %></td>
    </tr>

    <tr>
      <td>*  Estos campos son obligatorios</td>
    </tr>
  </table>
  </p>
  <p>   
    <%= f.submit 'Crear' %>  <%= link_to 'Cancelar', notices_path %>
  </p>
<% end %>