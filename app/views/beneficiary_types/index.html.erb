<%if current_user%> <h1>Tipos de beneficiarios</h1>

<p>
	<% form_tag beneficiary_types_url, :method => 'get' do %>
	Parametros <%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Buscar", :name => nil %>
	<% end %>
</p>

<table>
	<tr align="right">
		<td> <%= button_to 'Crear nuevo', new_beneficiary_type_url %> </td>
	</tr>
	<tr>
		<td colspan="2">
		<table border="3">
			<tr>
				<th>Nombre</th>
				<th>Descripcion</th>
				<th colspan="3">Acciones</th>
			</tr>

			<% @beneficiary_types.each do |beneficiary_type| %>
			<tr>
				<td><%= h beneficiary_type.name %></td>
				<td><%= h beneficiary_type.description %></td>
				<td><%= link_to 'Ver', beneficiary_type %></td>
				<td><%= link_to 'Editar', edit_beneficiary_type_path(beneficiary_type) %></td>
				<td><%= link_to 'Eliminar', beneficiary_type, :confirm => "¿Está seguro que desea eliminar el tipo de beneficiario" , :method => :delete %></td>
			</tr>
			<% end %>
		</table></td>
	</tr>
</table>
<%else%>
<h2>No puede realizar esta acción, por favor contáctese con el administrador del sistema</h2>
<%end%>

