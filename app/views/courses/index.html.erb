
<h1>Historial de Cursos</h1>
<table>
  <tr>
    <th>Nombre</th>
    <th>Responsable</th>
    <th>Fecha Inicial</th>
    <th colspan="3">Acciones</th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.name, course%></td>
    <td><%=h course.responsible %></td>
    <td><%=h course.date_ini %></td>
    
    <td><%= link_to 'Editar', edit_course_path(course) %></td>
      <td align="CENTER"><%= link_to "Anadir participantes", edit_course_path(course)%></td>
    <td><%= link_to 'Eliminar', course, :confirm => '¿Está seguro que desea eliminar el curso?', :method => :delete %></td>    
  </tr>
<% end %>
</table>

<br />
