<%if current_user%>
<CENTER><h1>Nuevo Curso</h1></center>

<% form_for(@course) do |f| %>
  <%= f.error_messages %>

<%= f.hidden_field :workshop_id, :value => params[:workshop_code] %>
      <%= f.hidden_field :courses_types_id, :value => params[:course_type_code] %>      
<TABLE   ALIGN="CENTER">      
  <tr>
    <td>* Nombre<br /></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td>* Responsable<br /></td>
    <td><%= f.text_field :responsible %></td>
  </tr>
  
  <tr>
    <td>&nbsp&nbsp&nbspFecha<br /></td>
    <td><%= f.date_select :date_ini %></td>
  </tr>
  
  <tr>
    <td>&nbsp&nbsp&nbspDescripci√≥n<br /></td>
    <td><%= f.text_area :description, :rows=>6, :cols=>22  %></td>
  </tr>
  
  <tr>
      <td>* Seleccione los Asistentes</td>
      <td>
   
      <% lista_voluntarios = Volunteer.all.map { |volunteer| [volunteer.name, volunteer.id] } %>
        <%= select_tag "lista_voluntarios", options_from_collection_for_select(Volunteer.all, :id , :name),:multiple=>true %>  
      
    </td>
    </tr>
    
    <tr align="right">
      <td colspan="2">
        <%= f.submit 'Registrar' %>
        <button type="reset">Limpiar</button>
        <%= link_to 'Volver', courses_path %>
      </td>
    </tr>
    
        <tr>
      <td>*  Estos campos son obligatorios</td>
    </tr>
    
    </TABLE>   
<% end %>


<%else%>
<h1>no puede realizar esta accion, porfavor contactese</h1>
<%end%>

