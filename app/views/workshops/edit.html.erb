<%if current_user%>
<h1>Editar Taller</h1>

<% form_for(@workshop) do |f| %>
  <%= f.error_messages %>

  <table>  
   <tr>
    <td>
      <b>Parroquia:</b>
    </td>
    
    
        <td><%= link_to Parish.find(@workshop.parish_id).parish_name,Parish.find(@workshop.parish_id) %></td>
  </tr>
  <tr>
    <td>
      <b>Parroco:</b>
    </td>


    <td><%=h @pastor.to_s  %></td>

  </tr>
  <tr>
    <td>
      <b>Estado de parroquia:</b>
    </td>


    <td><%=h Parish.find(@workshop.parish_id).current_state%></td>

  </tr>
  <tr>
    <td>
      <b>Vicaria a la que pertenece:</b>
    </td> 
    <td><%=h Vicariou.find(Parish.find(@workshop.parish_id).pastor_id).name_vicariou%></td>   
  </tr>
  
  <tr>
  <td><b> * Encargado</b></td>
    <td><%= f.text_field :in_charge %></td>    
  </tr>  

 
  
  <tr>
    <td><b>Observaciones</b></td>
    <td><%= f.text_area :observations , :rows=>6, :cols=>22%></td>
  </tr>   

  
  <tr>
    <td colspan="2" align="CENTER">
       <% if WorkshopCourseType.searchByWork(@workshop.id).count!=0 %>
      
      <h1>Cursos Realizados</h1>
<table border="3" align="CENTER">

        <tr id ='head-table'>
          <th align="CENTER">Curso Formacion</th>
          <th align="CENTER">Cantidad</th>
          <th align="CENTER">Accion</th>
        </tr>

     


      
      
  <%   WorkshopCourseType.searchByWork(@workshop.id).each do |r| %>
        <tr>
          
          
      <% @cour= CoursesType.findf(r.id_course_type)[0] %>
          <td align="CENTER">
     <%= link_to r.to_s, @cour %>
            </td>
            
          <td align="CENTER">
            <%=  Course.findf(r.id_course_type,@workshop.id).count%>
            </td>
            
          <td align="CENTER">
     accion
            </td>
            
            
      </tr>
    <%  end %>
     </table> 
    <%  else  %>
      <h1 align="CENTER">No Tiene Cursos!!! </h1>
    <%  end %>
      

      
  <tr align="right">
      <td colspan="2">         
          <%= f.submit 'Actualizar' %>
    <button type="reset">Limpiar</button>
    <%= link_to 'Ver', @workshop %> |
    <%= link_to 'Atras', workshops_path %>
      </td>
    </tr>  
  <tr>
      <td>*  Estos campos son obligatorios</td>
    </tr>
</table>  
<% end %>
<%else%>
<h1>no puede realizar esta accion, porfavor contactese</h1>
<%end%>
