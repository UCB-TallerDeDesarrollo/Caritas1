<%if current_user%>
    <% if @volunteer_user %>
        <h1>Nuevo Usuario Voluntario</h1>
    <% else %>
    <h1>Nuevo Usuario</h1>
    <% end %>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <table>
    <tr>
      <td>* Nombre de Usuario</td>
      <td><%= f.text_field :username %></td>
    </tr>
    <tr>
      <td>* E-mail</td>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <td>* Contrase침a</td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td>* Confirmacion de Contrase침a</td>
      <td><%= f.password_field :password_confirmation %></td>
    </tr>
    <% if @volunteer_user%>
    <%= f.hidden_field :role %>
    <%= f.hidden_field :controller_type %>
    <% else %>
        <tr>
          <td>* Rol usurio</td>
          <td><%= f.select :role, User::USERS_TYPES %></td>
        </tr>
    <% end %>
    <tr align="right">
      <td colspan="2"><%= f.submit 'Registrar' %></td>
    </tr>
  </table>

<% end %>
