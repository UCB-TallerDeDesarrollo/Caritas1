<h1>Grupos</h1>

<table>
  <tr align="right">
    <td>
      <% form_tag groups_path, :method => 'get' do %>
      Nombre: <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
      <% end %>
    </td>
    <td>
      <%=button_to 'Crear Grupo', new_group_path %>
    </td>
  </tr>
  <tr>
    <td colspan="2">

    <table border="3">
      <tr>
        <th>Nombre</th>
        <th>Responsable</th>
        <th>Voluntarios</th>
        <th colspan="3">Acciones</th>
      </tr>

      <% @groups.each do |group| %>
      <tr>
        <td><%=h group.name %></td>
        <td><%=h group.volunteer %></td>
        <td><%= link_to 'Voluntarios', volunteers_path %></td>
        <td><%= link_to 'Ver', group %></td>
        <td><%= link_to 'Editar', edit_group_path(group) %></td>
        <td><%= link_to 'Eliminar', group, :confirm => 'Esta seguro?', :method => :delete %></td>
      </tr>
    <% end %>
    </table>

    </td>
  </tr>
</table>
<br />