<h1>Nuevo Grupo</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

    <table>
      <tr>
        <td><%= f.label :name %></td>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td><%= f.label :group_leader %></td>
        <td><%= link_to_record_select 'Seleccione al Responsable', 'volunteers', :onselect => "alert('You picked ' + label + ', id#' + id);" %></td>
      </tr>
      <tr align="right">
        <td colspan="2">
          <%= f.submit 'Registrar' %>
          <button type="reset">Limpiar</button>
          <%= link_to 'Cacelar', groups_path %>
        </td>
      </tr>
    </table>
<% end %>

