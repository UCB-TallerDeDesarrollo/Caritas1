<h1>Nuevo Grupo</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

    <table>

      <tr>
        <td>* Nombre</td>
        <td><%= f.text_field :name %></td>
      </tr>

      <tr>
        <td>Responsable</td>
        <td>
          <%= record_select_field 'group[volunteer_id]', @volunteer || Volunteer.new %>
        </td>
      </tr>

      <tr align="right">
        <td colspan="2">
          <%= f.submit 'Registrar' %>
          <button type="reset">Limpiar</button>
          <%= link_to 'Cacelar', groups_path %>
        </td>
      </tr>

    </table>
<% end %>

