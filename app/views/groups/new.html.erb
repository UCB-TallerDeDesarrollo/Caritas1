<h1>Nuevo Grupo</h1>

<% form_for(@group) do |f| %>
  <%= f.error_messages %>

  <table>

    <tr>
      <td>* Nombre</td>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <td>Responsable</td>
      <td>
        <select name="group[volunteer_id]">
          <option value="-1"></option>
          <% if @volunteers
          @volunteers.each do |volunteer| %>
            <option value="<%=volunteer.id%>">
              <%=volunteer.to_s%>
            </option>
          <%end%>
            <%end%>
        </select>
      </td>
    </tr>

    <tr align="right">
      <td colspan="2">
        <%= f.submit 'Registrar' %>
        <button type="reset">Limpiar</button>
        <%= link_to 'Cancelar', groups_path %>
      </td>
    </tr>

  </table>
<% end %>

