  <h1>Lista de Voluntarios</h1>

<% form_tag volunteers_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>

<%= link_to 'Crear Voluntario', new_volunteer_path %>
<% end %>

</p>

<table border="3">

  <tr>
    <th>Nombre</th>
    <th>Apellido Paterno</th>
    <th>Apellido Materno</th>
    <th>Profesion</th>
    <th>Telefono</th>
    <th>Celular</th>
    <th>Fecha de Nacimiento</th>
    <th>Genero</th>
    <th>Cargo</th>
    <th colspan="3"> Operaciones</th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
    <td> <center><%=h volunteer.name %> </center></td>
    <td> <center><%=h volunteer.last_name %> </center></td>
    <td> <center><%=h volunteer.second_last_name %> </center></td>
    <td> <center><%=h volunteer.profession %> </center></td>
    <td> <center><%=h volunteer.phone_number %> </center></td>
    <td> <center><%=h volunteer.movil %> </center></td>
    <td> <center><%=h volunteer.date_of_birth %> </center></td>
    <td> <center><%=h volunteer.genre %> </center></td>
    <td> <center><%=h volunteer.position %> </center></td>
    <td> <center><%= link_to 'Ver', volunteer %> </center></td>
    <td> <center><%= link_to 'Actualizar', edit_volunteer_path(volunteer) %></td>
    <td><%= link_to 'Borrar', volunteer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />