<h1>Lista de Voluntarios</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Apellido Paterno</th>
    <th>Apellido Materno</th>
    <th>Profesion</th>
    <th>Telefono</th>
    <th>Celular</th>
    <th>Fecha de Nacimiento</th>
    <th>Genero</th>
    <th>Cargo</th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
    <td><%=h volunteer.name %></td>
    <td><%=h volunteer.last_name %></td>
    <td><%=h volunteer.second_last_name %></td>
    <td><%=h volunteer.profession %></td>
    <td><%=h volunteer.phone_number %></td>
    <td><%=h volunteer.movil %></td>
    <td><%=h volunteer.date_of_birth %></td>
    <td><%=h volunteer.genre %></td>
    <td><%=h volunteer.position %></td>
    <td><%= link_to 'Ver', volunteer %></td>
    <td><%= link_to 'Actualizar', edit_volunteer_path(volunteer) %></td>
    <td><%= link_to 'Borrar', volunteer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Crear Voluntario', new_volunteer_path %>