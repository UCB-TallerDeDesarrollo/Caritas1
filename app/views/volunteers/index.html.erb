<h1>Listing volunteers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Last name</th>
    <th>Second last name</th>
    <th>Profession</th>
    <th>Phone number</th>
    <th>Movil</th>
    <th>Date of birth</th>
    <th>Gender</th>
    <th>Position</th>
  </tr>

<% @volunteers.each do |volunteer| %>
  <tr>
    <td><%=h volunteer.name %></td>
    <td><%=h volunteer.last_name %></td>
    <td><%=h volunteer.second_last_name %></td>
    <td><%=h volunteer.profession %></td>
    <td><%=h volunteer.phone_number %></td>
    <td><%=h volunteer.movil %></td>
    <td><%=h volunteer.date_of_birth %></td>
    <td><%=h volunteer.gender %></td>
    <td><%=h volunteer.position %></td>
    <td><%= link_to 'Show', volunteer %></td>
    <td><%= link_to 'Edit', edit_volunteer_path(volunteer) %></td>
    <td><%= link_to 'Destroy', volunteer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

