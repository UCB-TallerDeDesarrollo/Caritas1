<div id="notice">

  <div id="lateralMenu">
    <h3>Ejemplo</h3>
    <ul>
      <li>
        <a href="#">Titulo 1
          <span> ... el contenido oculto que se desplegará ...</span>
        </a>
      </li>
      <li>
        <a href="#">Titulo 2
          <span> ... el contenido oculto que se desplegará ...</span>
        </a>
      </li>
    </ul>
    <h3>Campañas</h3>
    <ul>
      <% Campaing.find_last_five.each do |campaing| %>
        <li>
          <%= link_to"#{campaing.name}" "<span>#{truncate(campaing.description, :length => 100)}</span>", campaing%>
        </li>
      <% end %>
      <li><%=link_to "Ver Todos", campaings_path%></li>
    </ul>
    <h3>Ultimas noticias</h3>
    <ul>
      <% Notice.find_last_five.each do |notice| %>
        <li><%= link_to "#{notice.title}", :controller => "notices", :action => "show_public", :id =>notice %></li>
      <%end %>
      <li><%= link_to 'Ver Todos', notices_path %></li>

    </ul>
    <h3>Obras Sociales</h3>
    <ul>
      <% SocialWork.find_last_five.each do |social_work| %>
        <li>
          <%= link_to"#{social_work.to_lable}" "<span>Ubicacion: #{social_work.location}</span>", social_work%>
        </li>
      <% end %>
      <li><%= link_to 'Ver Todos', social_works_path %></li>
    </ul>
  </div>
</div>