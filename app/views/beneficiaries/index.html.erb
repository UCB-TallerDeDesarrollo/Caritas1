<h1>Beneficiarios</h1>

<p>
  <% form_tag beneficiaries_path, :method => 'get' do %>
      Parametro <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Buscar", :name => nil %>
  <% end %>
</p>

<div style="position: inherit;">
  <%=button_to  'Registrar beneficiario', new_beneficiary_path %>
</div>

<table border="3">
  <tr id = 'head-table'>
    <th>CI</th>
    <th>Nombre</th>
    <th>Apellido</th>
    <th>Rasgos personales</th>
    <th>Observaciones</th>
    <th>Acciones</th>
  </tr>

  <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%=link_to beneficiary.ci  %></td>
        <td><%=link_to beneficiary.name %></td>
        <td><%=link_to beneficiary.last_name %></td>
        <td><%=h beneficiary.personal_traits %></td>
        <td><%=h beneficiary.observations  %></td>
        <td><%= link_to "Editar",edit_beneficiary_path(beneficiary) %> </td>
      </tr>
  <% end %>
</table>