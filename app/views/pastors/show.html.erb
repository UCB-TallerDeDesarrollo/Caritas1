
<h1>Ver Párroco</h1>


<table>

  <tr>
    <td><b>Nombre</b></td>
    <td><%=h @pastor.name %></td>
  </tr>

  <tr>
    <td><b>Apellido Paterno</b></td>
    <td><%=h @pastor.primary_last_name %></td>
  </tr>

  <tr>
    <td><b>Apellido Materno</b></td>
    <td><%=h @pastor.second_last_name %></td>
  </tr>  
  <tr>
    <td>

      <b>Fecha de Nacimiento</b></td><td>
      <%if !@pastor.date_of_birth.nil? %>	
	      <%if @pastor.date_of_birth.year != 1 %>
	      	<%=h @pastor.date_of_birth.strftime("%d/%m/%Y") %>
	      <%else%>
	      	<%=h @pastor.date_of_birth.strftime("%d/%m") %>
	      <%end%>
	  <%end%>
    </td>
  </tr>
  <tr>
    <td><b>Teléfono</b></td>
    <td><%=h @pastor.phone_number %></td>
  </tr>  
  
  <tr>
    <td><b>Celular</b></td>
    <td><%=h @pastor.cellphone_number %></td>
  </tr>  
  
  <tr align="right">
    <td colspan="2">
      <%= link_to 'Editar', edit_pastor_path(@pastor) %> |
      <%= link_to 'Volver', pastors_path %>
    </td>
  </tr>

</table>
